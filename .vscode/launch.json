{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}", // Chemin de l'exécutable
            "args": ["/home/mohameml/ENSIMAG/3A/MEQA/S10/06_Projet_MT/Projet/projet-MT/data/call_currency/call_currency_params.json"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build", // Assurez-vous que cette tâche est définie dans tasks.json
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Test test_json_reader",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_json_reader", // Chemin vers votre exécutable
            "args": ["/home/mohameml/ENSIMAG/3A/MEQA/S10/06_Projet_MT/Projet/projet-MT/data/call_currency/call_currency_params.json"], // Arguments pour l'exécutable s'il y en a
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Répertoire de travail
            "environment": [],
            "externalConsole": false, // Utilisez `true` pour une console externe
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer le mode de débogage",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build", // Ajouter une tâche de pré-lancement si besoin (par ex. "build")
        }
    ]
}